
@inject NavigationManager Navigation

<style>

    .back-btn
    {
        position: absolute; 
        width: 35px; 
        border-radius: 50%; 
        bottom: 2%; 
        opacity: .8; 
        margin: 2%; 
    }

    .back-btn-container
    {
        position: absolute;
        z-index: -1;
        width: 100%;
        height: 100%; 
    }

</style>

<div class="back-btn-container">
<a @onclick="GoBack">  <img src="./images/backbtn.png" alt="btn" class="back-btn"/> </a>
</div>

@code
{

    [Parameter]
    public string Url { get; set; }

    private void GoBack()
    {
        Navigation.NavigateTo($"/{Url}");
    }

}

