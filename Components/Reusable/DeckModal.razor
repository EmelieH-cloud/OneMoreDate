@inject NavigationManager Navigation;

<div class="deckmodal-outer-container">

    <div class="deck-modal @AddAnimationClass">
        <div class="deck-modal-inner-container">
            <button type="button" class="btn-close small" aria-label="Close" @onclick="CloseButton"></button>
            @if (DeckNumber == 1)
            {
                <h2 class="deck-modal-header">Trial Deck</h2>
                <div class="deck-modal-text-container">
                    <p class="modal-font p-text">Ready to dive into the joy of ONE MORE DATE but not sure where to start?</p>
                    <p class="modal-font p-text">Try out our free trial version!</p>
                </div>
            }
            <button @onclick=StartGame class="text-white modal-btn button-29">PLAY</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int DeckNumber { get; set; }

    [Parameter]
    public string AddAnimationClass { get; set; }

    [Parameter]
    public EventCallback CloseButton { get; set; }

    private void StartGame()
    {
        Navigation.NavigateTo("/startGame");
    }
}
