

<style>

    .deck-modal 
    {
       
        position: fixed;
        width:85%;
        
        top: 40%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(255, 192, 203, 0.9);
       
        
        z-index: 1000;
    }
</style>


<div class="deck-modal">

    <div class="deck-modal-btn-container ">
    <button type="button" class=" btn-close small " aria-label="Close" @onclick=CloseButton></button>
    </div>
    <div class="deck-modal-inner-container"
 <h2 class="fw-bold clear-font" >@DeckHeader</h2>
    <p class="fw-bold clear-font">@Description</p>
    <button @onclick=btnClick class="button-color button clear-font">@ButtonDescription</button>
    </div>
</div>

@code
{
    [Parameter]
    public string ButtonDescription{ get; set; }
    [Parameter]
    public string DeckHeader{ get; set; }
    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public EventCallback CloseButton{ get; set; }

    [Parameter]
    public EventCallback btnClick{ get; set;  }
}