@inject NavigationManager Navigation

<style>

   

    .back-btn 
    {
        position: absolute;
        width: 35px;
        border-radius: 50%;
        top: 2%;
        left: 1%;
        margin: 2%;
        opacity: .8;
        
    }

    .navigate-btn-container 
    {
        position: absolute;
        z-index: 1;
        width: 100%;
        height: 10%;
        top: 2%; 
   
    }

</style>

<div class="navigate-btn-container">
    <button @onclick="GoBack">  <img src="./images/backbtn.png" alt="btn" class="back-btn" /> </button>
</div>


@code
{


    [Parameter]
    public string BackUrl { get; set; }


    private void GoBack()
    {
        Navigation.NavigateTo($"/{BackUrl}");
    }

}
