@inject NavigationManager Navigation

<style>

    .forward-btn {
        position: absolute;
        width: 35px;
        border-radius: 50%;
        bottom: 2%;
        right: 1%;
        margin: 2%; 
        opacity: .8;
    }

    .forward-btn-container 
    {
        position: absolute;
        z-index: -1;
        width: 100%;
        height: 100%;
    }

</style>

<div class="forward-btn-container">
    <a @onclick="GoForward">  <img src="./images/forwardbtn.png" alt="btn" class="forward-btn" /> </a>
</div>

@code {
    [Parameter]
    public string Url { get; set; }

    [Parameter]
    public int Count { get; set; }

    [Parameter]
    public bool IsEnabled { get; set; } = true;

    private void GoForward()
    {
        if (IsEnabled)
        {
            Navigation.NavigateTo($"{Url}/{Count}");
        }
    }
}