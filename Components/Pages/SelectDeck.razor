@page "/deck"
@using OneMoreDate.Managers;
@using OneMoreDate.Models;
@using OneMoreDate.Components.Reusable;
@inject NavigationManager Navigation

<style>
    .img-smaller 
    {
        max-width: 60%; 
        height: auto; 
        border-radius: 10px; 
    }

    .select-deck-img
    {
        width: 25%;
        border-radius: 50%; 

    }

 
</style>

@if (showModal)
{
   
    <DeckModal Description=@deckDescription DeckHeader=@deckHeader CloseButton ="closeBtn" btnClick="clickButton" ButtonDescription=@buttonDescription/>
    
}

<div class="container-fluid mb-4 text-center animate__animated animate__fadeIn  mt-4">
        <div class="col d-flex flex-column justify-content-center align-items-center " @onclick="()=>selectDeck(1)" >
        <img src="./images/deck.png" alt="deck" class="img-smaller" />
     <h4>Starter Deck</h4>
    </div>

        <div class="col d-flex flex-column justify-content-center align-items-center mt-3">
        <img src="./images/partydeck.png" alt="deck" class="img-smaller" />
          <h4>The original Deck</h4>
    </div>

    
        <div class="col d-flex flex-column justify-content-center align-items-center mt-3">
        <img src="./images/naughtydeck.png" alt="deck" class="img-smaller" />
           <h4>The Naughty Deck </h4>
        </div>
</div>

@code {
    private string buttonDescription{ get; set; }
    private string deckHeader;
    private bool showModal = false;
    private string deckDescription;

    private void GoToGame()
    {
        Navigation.NavigateTo("/game");
    }

    private void selectDeck(int deckId)
    {

        if (deckId == 1)
        {
            deckHeader = "Trial Deck";
            deckDescription = "Ready to dive into the excitement of our game but not sure where to start? Say hello to the Trial Deck! Perfectly crafted for newcomers, this deck lets you experience the thrill and strategy of our gameplay without any commitment. Unlock the fun, explore unique challenges, and get a taste of what our full decks have to offer. Download now and start your adventure—no purchase necessary!";
        }
        showModal = true;

        if (deckId == 2)
        {
            
        }
    }

    private void closeBtn()
    {
        showModal = false;
    }

    private void clickButton()
    {
        if(buttonDescription == "Play")
        {
            Navigation.NavigateTo("/game");
        }

        else
        {
            
        }
    }

}
