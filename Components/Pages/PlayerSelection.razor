@page "/players"
@using Microsoft.AspNetCore.Components
@using OneMoreDate.Components.Reusable;
@inject NavigationManager Navigation

<div class="vh-100 d-flex justify-content-center align-items-center animate__animated animate__fadeIn">
<Background/>

<div class="d-flex justify-content-center flex-column align-items-center text-center modal-bg rounded">
    <h2 class="display-3">Players:</h2>
    <h1>@currentCount</h1>
    <div class="d-flex justify-content-between align-items-center">
    <button class="btn btn-light addBtn" @onclick="DecrementCount">-</button>
     <button class="btn btn-light removeBtn" @onclick="IncrementCount">+</button>
    </div>
    

    <GoBackButton Url=""/>
</div>
</div>

@code 
{
  
    private int currentCount = 0;

   
    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }
}